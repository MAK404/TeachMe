<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/maind"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="Online Details"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/wn"
                        android:textColor="@color/black"
                        android:text="WhatsApp: "
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/roundborder2"
                        android:layout_marginBottom="15dp"
                        android:drawableStart="@drawable/whatsapp"

                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:hint="WhatsApp"
                        android:inputType="textMultiLine"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/em"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/roundborder2"
                        android:drawableStart="@drawable/ic_email"
                        android:drawablePadding="16dp"
                        android:textColor="@color/black"
                        android:text="Mail: "
                        android:textSize="17dp"
                        android:layout_gravity="center"

                        android:ems="10"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:padding="16dp" />
                    <TextView
                        android:id="@+id/mid"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/roundborder2"
                        android:textColor="@color/black"
                        android:text="Meet ID: "
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/meet"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:hint="Meeting ID"
                        android:inputType="text"
                        android:padding="16dp" />

                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/main"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="Offline Details"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <TextView
                        android:id="@+id/mno2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/roundborder2"
                        android:layout_marginBottom="15dp"
                        android:drawableStart="@drawable/phone"
                        android:textColor="@color/black"
                        android:text="MNo: "
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:hint="Mobile Number"
                        android:inputType="textMultiLine"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/add"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/roundborder2"
                        android:textColor="@color/black"
                        android:text="Address: "
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/address"
                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:hint="Complete Address"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="15dp"
                        android:padding="16dp" />

                    <TextView
                        android:id="@+id/land"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@drawable/roundborder2"
                        android:textColor="@color/black"
                        android:text="Landmark: "
                        android:textSize="17dp"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/landmark"

                        android:drawablePadding="16dp"
                        android:ems="10"
                        android:hint="Landmark"
                        android:inputType="textMultiLine"
                        android:padding="16dp" />


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
               <TextView
                android:id="@+id/schedule"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/roundborder2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableStart="@drawable/time"
                android:drawablePadding="16dp"
                android:textColor="@color/black"
                android:text="Schedule: "
                android:textSize="17dp"

                android:ems="10"
                android:layout_marginBottom="15dp"
                android:hint="Timing Schedule Desctiption"
                android:inputType="textMultiLine"
                android:padding="16dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"

                    android:stepSize="0.5" />

                <Button
                    android:id="@+id/btnrating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/round_bg"
                    android:text="Rate Tutor"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>